{
  "manifest_version": 3,
  "name": "PPW",
  "version": "1.0.0",

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["scripting"],

  "action": {
    "default_popup": "popup/popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
